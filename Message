        canvas {
            display: block;
            border-radius: 15px;
            border: 3px solid #ff6f91;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            animation: spin 4s linear infinite;
        }

        button {
            margin-top: 20px;
