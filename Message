        #message {
            margin-top: 20px;
            color: #ff6f91;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            animation: fadeInMessage 3s ease-in-out;
            opacity: 0;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes fadeInMessage {
